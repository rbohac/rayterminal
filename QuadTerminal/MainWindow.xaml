<Window x:Class="QuadTerminal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QuadTerminal"
        Width="1400" Height="900"
        MinWidth="800" MinHeight="600"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        SizeChanged="Window_SizeChanged">

    <Grid x:Name="HostGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Label Bar -->
        <Grid x:Name="TopLabelBar" Grid.Row="0" Background="#2D2D2D">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="LabelP1" Grid.Column="0" Text="P1"
                     Background="#2D2D2D" Foreground="#CCCCCC"
                     BorderBrush="#3D3D3D" BorderThickness="0,0,1,1"
                     FontFamily="Consolas" FontSize="14" Padding="8,4"
                     VerticalContentAlignment="Center"
                     GotFocus="Label_GotFocus"/>
            <TextBox x:Name="LabelP2" Grid.Column="1" Text="P2"
                     Background="#2D2D2D" Foreground="#CCCCCC"
                     BorderBrush="#3D3D3D" BorderThickness="0,0,0,1"
                     FontFamily="Consolas" FontSize="14" Padding="8,4"
                     VerticalContentAlignment="Center"
                     GotFocus="Label_GotFocus"/>
        </Grid>

        <!-- Terminal Host Area -->
        <Grid x:Name="TerminalHost" Grid.Row="1">
            <TextBlock x:Name="LoadingText"
                       Text="Starting terminal..."
                       Foreground="#888888"
                       FontSize="18"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>

        <!-- Bottom Label Bar -->
        <Grid x:Name="BottomLabelBar" Grid.Row="2" Background="#2D2D2D">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="LabelP3" Grid.Column="0" Text="P3"
                     Background="#2D2D2D" Foreground="#CCCCCC"
                     BorderBrush="#3D3D3D" BorderThickness="0,1,1,0"
                     FontFamily="Consolas" FontSize="14" Padding="8,4"
                     VerticalContentAlignment="Center"
                     GotFocus="Label_GotFocus"/>
            <TextBox x:Name="LabelP4" Grid.Column="1" Text="P4"
                     Background="#2D2D2D" Foreground="#CCCCCC"
                     BorderBrush="#3D3D3D" BorderThickness="0,1,0,0"
                     FontFamily="Consolas" FontSize="14" Padding="8,4"
                     VerticalContentAlignment="Center"
                     GotFocus="Label_GotFocus"/>
        </Grid>
    </Grid>
</Window>
